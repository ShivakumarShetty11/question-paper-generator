# Environment Variables Template
# Copy this file to .env and fill in your values

# Required: Groq API Key
# Get your key from: https://console.groq.com
GROQ_API_KEY=gsk-your-api-key-here

# Optional: LLM Configuration
FERMI_MODEL=llama-3.1-8b-instant
FERMI_TEMP=0.7
FERMI_MAX_TOKENS=8000

# Optional: TikZ Rendering
FERMI_DPI=300
TECTONIC_PATH=./tectonic.exe
FERMI_KEEP_INTERMEDIATE=false

# Optional: Performance
FERMI_PARALLEL=true
FERMI_VALIDATE=true
FERMI_MAX_RETRIES=3

# Optional: Directories
FERMI_OUTPUT_DIR=./output
FERMI_TEMP_DIR=./output/temp
